@model EMS_APP.Models.employeeModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add a new Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="empName" class="control-label"></label>
                <input asp-for="empName" class="form-control" />
                <span asp-validation-for="empName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empDOB" class="control-label"></label>
                <input asp-for="empDOB" class="form-control" />
                <span asp-validation-for="empDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empEmail" class="control-label"></label>
                <input asp-for="empEmail" class="form-control" />
                <span asp-validation-for="empEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empPhone" class="control-label"></label>
                <input asp-for="empPhone" class="form-control" />
                <span asp-validation-for="empPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deptID" class="control-label"></label>
                <select asp-for="deptID" class ="form-control" asp-items="ViewBag.deptID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
